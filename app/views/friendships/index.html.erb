<p id="notice"><%= notice %></p>

<h1 class="text-center login_h2 m-5">Friendships</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th class="text-center text-info">User</th>
      <th class="text-center text-info">Friend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.followers.each do |friendship| %>
      <tr>
        <td><%= current_user.name  %></td>
        <td><%= friendship.name %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path ,:class => "btn btn-primary m-1" %>
