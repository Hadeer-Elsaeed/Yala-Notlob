
<%= form_tag(add_friend_group_path , method: 'post') do %>
<div class="form-group" style="width:40%">
      <%= text_field_tag(:email, params[:email],placeholder: "Enter Friend Email", class: "form-control") %>
      <br/>
      <%= submit_tag("Add Friend", name: nil,class: "btn btn-success") %>
</div>
<% end %>