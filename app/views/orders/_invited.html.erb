<!DOCTYPE html>
  <html lang="en">
  <body>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel"> invited friends</h4>
</div>
<div class="modal-body"> 
<% @invited_users_state = @invited_users.blank? %>
<% if @invited_users_state == false %>
  <% @invited_users.each do |invited_users| %>
  <%= @user_id = invited_users.user_id %>
  <h4 style="color:navy; "><%= User.find(id = @user_id ).name %></h4>
  <% end %>
<%else%>
    <% @order_group.each do |order_group| %>
    <%= @id = order_group.group_id %>
    <% @group_friends = Friendship.where(:group_id=>@id) %>
      <% @group_friends.each do |group_friends| %>
        <%=  @uid =group_friends.User_id  %>
      <% end %>
    <% end %>
<% end %>

</div>
<div class="modal-footer">
  <button class="btn btn-primary">close</button>
</div>
</body>
</html>

